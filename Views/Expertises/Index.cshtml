@model IEnumerable<ScholarshipSolution.Models.Expertise>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TopicName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TopicName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ExpertiseID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ExpertiseID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ExpertiseID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

        
